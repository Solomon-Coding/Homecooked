<div >
  <div class='row' style="background-color: rgb(132, 75, 9);">

    <div class="col-2 vh-100" style="border: 1px solid; background-color: rgb(241, 186, 103);">
      <div class=" mt-5  d-flex row g-2">
        <button>My recipes</button>

        <button>Add recipes</button>

        <button>Edit recipes</button>
      </div>

    </div>

    <div class="col-10 vh-100  d-flex justify-content-center"
      style="border: 1px solid; height: 110px; overflow-y: scroll; ">

      <div class=" text-center pt-2  mt-5 bg-light recipes ">
        <h1>My Recipes</h1>
        <hr>

        <div class="d-flex row  justify-content-center m-2 rep-list ">
          <ul>
            {{#each recipe as |recipes|}}
            <li type="button">
              {{recipes.name}}
              <a>link here</a>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
