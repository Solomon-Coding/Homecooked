<div >
  <div class='row vh-100' style="background-color: rgb(132, 75, 9);">

    <div class="col-2 vh-100" style=" background-color: rgb(241, 186, 103);">
      <div class=" mt-5  d-flex row g-2">
        <button id="view-recipes" onclick="href='./recipes.handlebars'" type="submit">My recipes</button>
        <button>Add recipes</button>

        <button>Edit recipes</button>
      </div>

    </div>

    <div class="col-10 vh-100  d-flex justify-content-center"
      style=" height: 110px; overflow-y: scroll; ">

      <div class=" text-center pt-2  mt-5 bg-light recipes ">
        <h1>My Recipes</h1>
        <hr>

        <div class="d-flex row  justify-content-center m-2 rep-list ">
          <ul>
            {{#each recipeList as |recipe|}}
            <li id="individualRecipe" type="button">
              {{recipe.name}}
            </li>

            
            {{/each}}

          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/viewRecipes.js"></script>