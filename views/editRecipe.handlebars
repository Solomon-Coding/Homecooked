<div class="edit-recipe-container">
  <h2>
    Update Dish
  </h2>
  <form class="edit-recipe-form">
    <label for="recipe_name">
      Dish Name:
    </label>
    <br />
    <textarea id="recipe_name" name="recipe_name" rows="2" cols="30">
      {{recipe_name}}
    </textarea>
    <br />
    <label for="description">
      Description:
    </label>
    <br />
    <textarea id="description" name="description" rows="5" cols="30">
      {{description}}
    </textarea>
    <br />
    <label for="guest_name">
      Guest Name:
    </label>
    <br />
    <textarea id="guest_name" name="guest_name" rows="2" cols="30">
      words
    </textarea>
    <br />
    <br />
    <input type="checkbox" id="has_nuts" name="has_nuts" value="true" />
    <label for="has_nuts">
      Check box if this recipe contains nuts
    </label>
    <br />
    <button type="submit" value="Submit">
      Submit
    </button>
  </form>
</div>
<script src="/js/edit-recipe.js"></script>