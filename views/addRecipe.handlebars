<div>
  <div class='row vh-100' style="background-color: rgb(132, 75, 9);">

    <div class="col-2 vh-100" style=" background-color: rgb(241, 186, 103);">
      <div class=" mt-5  d-flex row g-2">
        <button id="view-recipes" type="button">My recipes</button>
        <button id="add-recipes">Add recipes</button>
      </div>

    </div>

    <div class="col-10 vh-100  d-flex justify-content-center" style=" height: 110px; overflow-y:scroll;">

      <div class=" text-center pt-2  mt-5 bg-light recipes ">
        <h1>My Recipes</h1>
        <hr>

        <div class="d-flex row  justify-content-center m-2 rep-list ">
          <ul id="recipeList">
            {{#each recipeList as |recipe|}}
            <li data-rid={{recipe.id}} id="individualRecipe" type="button">
              {{recipe.name}}
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/viewRecipes.js"></script>

 <!-- This is the form for adding a new dish -->
  <div class="add-dish-container">
    <h2>
      RSVP with the dish you plan to bring!
    </h2>
    <form class="new-dish-form">
      <label for="dish_name">
        Dish Name:
      </label>
      <br />
      <textarea id="dish_name" name="dish_name" rows="2" cols="30">
      {{dish_name}}
    </textarea>
      <br />
      <label for="description">
        Description:
      </label>
      <br />
      <textarea id="description" name="description" rows="5" cols="30">
      {{description}}
    </textarea>
      <br />
      <label for="guest_name">
        Guest Name:
      </label>
      <br />
      <textarea id="guest_name" name="guest_name" rows="2" cols="30">
      {{guest_name}}
    </textarea>
      <br />
      <br />
      {{#if has_nuts}}
      <input type="checkbox" id="has_nuts" name="has_nuts" checked />
      {{else}}
      <input type="checkbox" id="has_nuts" name="has_nuts" />
      {{/if}}
      <label for="has_nuts">
        Check box if this dish contains nuts
      </label>
      <br />
      <button type="submit" value="Submit">
        Submit
      </button>
    </form>
  </div>
</div>

<script src="/js/add-dish.js"></script>
